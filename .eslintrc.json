{
  "root": true,
  "ignorePatterns": ["node_modules/", "/src/", "/bld/"],
  "extends": ["plugin:@mufan/javascript"],
  "overrides": [
    {
      "files": "**/*.{js,mjs}",
      "parserOptions": {
        "sourceType": "module"
      }
    },
    {
      "files": "**/*.cjs",
      "parserOptions": {
        "sourceType": "script"
      }
    },
    {
      "files": "test/**",
      "env": {
        "jest": true
      },
      "rules": {
        "@mufan/scoped-modules": "off"
      }
    }
  ]
}
